<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="property_property_view_tree" model="ir.ui.view">
        <field name="name">property.property.tree</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name"/>
                <field name="code"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
            </list>
        </field>
    </record>

    <record id="property_property_view_form" model="ir.ui.view">
        <field name="name">property.property.form</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group>
                        <group>
                            <div class="oe_title">
                                <h1>
                                    <field name="code" readonly="1"/>
                                </h1>
                            </div>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Address">
                        <group>
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="city"/>
                        </group>
                        <group>
                            <field name="state_id"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                        </group>
                    </group>
                    <group string="Units"/>
                        <field name="unit_ids">
                            <list editable="bottom">
                                <field name="name"/>
                                <field name="unit_number"/>
                                <field name="rent_amount"/>
                                <field name="status"/>
                                <field name="current_tenant_id"/>
                            </list>
                        </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">property.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="property_rent_menu_root" name="Property Rental" sequence="220" web_icon="property_tent_portal,static/description/house.png"/>
    <menuitem id="property_rent_menu_properties" name="Properties" parent="property_rent_menu_root" action="property_property_action" sequence="10"/>
</odoo>