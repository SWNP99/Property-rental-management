<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <menuitem id="property_rent_menu_reporting" name="Reporting" parent="property_rent_menu_root" sequence="60"/>

    <record id="property_lease_pivot_view" model="ir.ui.view">
        <field name="name">property.lease.pivot</field>
        <field name="model">property.lease</field>
        <field name="arch" type="xml">
            <pivot string="Lease Analysis">
                <field name="property_id" type="row"/>
                <field name="unit_id" type="row"/>
                <field name="tenant_id" type="row"/>
                <field name="state" type="col"/>
                <field name="rent_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="property_lease_graph_view" model="ir.ui.view">
        <field name="name">property.lease.graph</field>
        <field name="model">property.lease</field>
        <field name="arch" type="xml">
            <graph string="Lease Rent Analysis" sample="1">
                <field name="property_id"/>
                <field name="rent_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="property_lease_report_action" model="ir.actions.act_window">
        <field name="name">Lease Analysis</field>
        <field name="res_model">property.lease</field>
        <field name="view_mode">pivot,graph</field>
    </record>

    <menuitem id="property_rent_menu_lease_report" name="Lease Analysis" parent="property_rent_menu_reporting" action="property_lease_report_action" sequence="10"/>

    <record id="property_maintenance_pivot_view" model="ir.ui.view">
        <field name="name">property.maintenance.pivot</field>
        <field name="model">property.maintenance.request</field>
        <field name="arch" type="xml">
            <pivot string="Maintenance Analysis">
                <field name="property_id" type="row"/>
                <field name="unit_id" type="row"/>
                <field name="issue_type" type="col"/>
                <field name="state" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="property_maintenance_graph_view" model="ir.ui.view">
        <field name="name">property.maintenance.graph</field>
        <field name="model">property.maintenance.request</field>
        <field name="arch" type="xml">
            <graph string="Maintenance Requests" sample="1">
                <field name="issue_type"/>
            </graph>
        </field>
    </record>

    <record id="property_maintenance_report_action" model="ir.actions.act_window">
        <field name="name">Maintenance Analysis</field>
        <field name="res_model">property.maintenance.request</field>
        <field name="view_mode">pivot,graph</field>
        <field name="context">{'graph_measure': '__count__', 'pivot_measures': ['__count__']}</field>
    </record>

    <menuitem id="property_rent_menu_maintenance_report" name="Maintenance Analysis" parent="property_rent_menu_reporting" action="property_maintenance_report_action" sequence="20"/>

    <record id="property_invoice_tree_view" model="ir.ui.view">
        <field name="name">property.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <list string="Rent Invoices">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="property_lease_id"/>
                <field name="property_unit_id"/>
                <field name="invoice_date"/>
                <field name="invoice_date_due"/>
                <field name="amount_total"/>
                <field name="state"/>
                <field name="payment_state"/>
            </list>
        </field>
    </record>

    <record id="property_invoice_action" model="ir.actions.act_window">
        <field name="name">Rent Invoices</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("move_type", "=", "out_invoice"), ("property_lease_id", "!=", False)]</field>
    </record>

    <menuitem id="property_rent_menu_invoice_report" name="Rent Invoices" parent="property_rent_menu_reporting" action="property_invoice_action" sequence="30"/>
</odoo>
